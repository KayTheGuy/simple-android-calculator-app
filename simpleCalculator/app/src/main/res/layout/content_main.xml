<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kayhan.simplecalculator.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:background="@color/colorLightGrey"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        />
    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_7"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:text="7"
            />
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_8"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:text="8"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_9"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="50pt"
            android:layout_height="40pt"
            android:text="9"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_C"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="C"/>

        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_CE"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="CE"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_4"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:text="4"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_5"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:text="5"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_6"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="50pt"
            android:layout_height="40pt"
            android:text="6"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_div"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="/"/>

        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_module"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="%"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_1"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:text="1"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_2"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:text="2"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_3"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="50pt"
            android:layout_height="40pt"
            android:text="3"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_mult"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="x"/>

        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_pow"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="^"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_."
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:text="."/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_0"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:text="0"/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_equal"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="50pt"
            android:layout_height="40pt"
            android:text="="/>
        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_add"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="+"/>

        <TextView
            android:textColor="@color/colorLightGrey"
            android:id="@+id/tv_root"
            android:textSize="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:clickable="true"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="@string/square_root_symbol"/>

    </LinearLayout>

</LinearLayout>
